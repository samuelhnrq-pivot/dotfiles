eval "$(/opt/homebrew/bin/brew shellenv)"

fpath=("$(brew --prefix)/share/zsh/site-functions" $fpath)

if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

export EDITOR=vim
export VISUAL=$EDITOR
export VOLTA_HOME="$HOME/.volta"
#GNUBIN="$(brew --prefix)/opt/coreutils/libexec/gnubin"
export PATH="$VOLTA_HOME/bin:$HOME/.local/bin:$PATH"

# eval "$(chezmoi completion zsh)"
eval "$(oh-my-posh init zsh --config /opt/homebrew/opt/oh-my-posh/themes/gmay.omp.json)"

function pfrontstart() {
    OLD_DIR=$PWD
    cd ~/code/pivot/frontend
    pnpm run dev
    cd $OLD_DIR
}

